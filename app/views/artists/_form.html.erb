<h1><%= @artist.id ? "Edit Artist" : "New Artist" %></h1>
<hr />
<%= form_for @artist do |f| %>
    <%=f.label :name %>
    <%= f.text_field :name, required: true, autofocus: true, placeholder: "Name" %>
    <%=f.label :description %>
    <%= f.text_field :description, required: true, autofocus: true, placeholder: "Name" %>
    <%=f.label :genre %>
    <%= f.text_field :genre, required: true, autofocus: true, placeholder: "Name" %>
    <%=f.label :song %>
    <%= f.text_field :song, required: true, autofocus: true, placeholder: "Name" %>
    <%= f.submit %>
<% end %>